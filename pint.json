{
  "preset": "psr12",
  "rules": {
    "no_trailing_comma_in_singleline_array": true,
    "concat_space" : {
      "spacing": "one"
    },
    "class_definition": {
      "space_before_parenthesis": false
    },
    "no_extra_blank_lines": {
      "tokens": [
        "curly_brace_block",
        "extra",
        "break",
        "continue",
        "parenthesis_brace_block",
        "return",
        "throw",
        "use"
      ]
    },
    "list_syntax": {
      "syntax": "short"
    },
    "declare_strict_types": true,
    "compact_nullable_typehint": true,
    "binary_operator_spaces": {
      "operators": {
        "=>": "align"
      }
    }
  }
}

